---
import type { GoogleColor } from "../../data/data";
interface Props {
  text: string;
  color: GoogleColor;
  href: string;
}

const { text, color, href } = Astro.props;
---

<a
  href={href}
  rel="prefetch"
  class={`w-5/6 rounded-2xl ${color} py-8 transition-all duration-200 hover:scale-110`}
>
  <p class="text-center text-2xl font-bold">
    {text}
  </p>
</a>
