---
import { Icon } from "astro-icon";

import DarkMode from "../components/ui/DarkMode.svelte";
---

<section
  class="flex h-screen flex-col items-center justify-center gap-y-5 text-center"
>
  <!-- Yu & GDSC Logos -->
  <div class="inline-flex gap-x-2">
    <a href="https://yu.edu.sa/" target="_blank" rel="noopener noreferrer"
      ><img src="/assets/logos/Yu.png" alt="Yu Logo" class="h-16 md:h-20" />
    </a>
    <a href="https://gdscyu.com/" target="_blank" rel="noopener noreferrer"
      ><img src="/assets/logos/gdsc.png" alt="GDSC Logo" class="h-16 md:h-20" />
    </a>
  </div>
  <!-- Title -->
  <h1 class="text-4xl font-bold md:text-5xl lg:text-7xl">
    <span>Tuwaiq</span> Classrooms <span>Availability</span>
  </h1>
  <h2 class="text-2xl md:text-4xl lg:text-5xl">
    Find <span>Empty Rooms</span> Easily<span>!</span>
  </h2>
  <!-- DarkMode Button -->
  <DarkMode Style="h-10 lg:h-12" client:only="svelte" />
  <!-- Scroll Down -->
  <a
    href="#Corners"
    class="absolute bottom-0 flex flex-col items-center justify-center p-4 hover:scale-110 hover:text-yu-orange-dark"
  >
    <span class="text-2xl font-bold">Scroll Down</span>
    <span>
      <Icon name="ic:round-keyboard-arrow-down" class="h-8" />
    </span>
  </a>
</section>

<style>
  h1 span,
  h2 span {
    @apply text-yu-orange-dark;
  }

  a img {
    @apply hover:scale-125;
  }
</style>
