---
import { Icon } from "astro-icon";
import DarkMode from "../components/ui/DarkMode";
---

<section class="h-screen">
  <div
    class="absolute inset-0 flex flex-col items-center justify-center gap-y-5 text-center"
  >
    <!-- Yu & GDSC Logos -->
    <div class="inline-flex gap-x-2">
      <a href="https://yu.edu.sa/" target="_blank" rel="noopener noreferrer">
        <img src="/logos/Yu.png" alt="Yu Logo" />
      </a>
      <a href="https://gdscyu.com/" target="_blank" rel="noopener noreferrer">
        <img src="/logos/gdsc.png" alt="GDSC Logo" />
      </a>
    </div>
    <!-- Title -->
    <h1 class="text-4xl font-bold md:text-5xl lg:text-7xl">
      <span>Tuwaiq</span> Classrooms <span>Availability</span>
    </h1>
    <h2 class="text-2xl md:text-4xl lg:text-5xl">
      Find <span>Empty Rooms</span> Easily<span>!</span>
    </h2>
    <!-- DarkMode Button -->
    <DarkMode
      Style="h-10 w-10 transition-all duration-200 hover:scale-110 md:h-12 md:w-12"
      client:load
    />
  </div>
  <!-- Scroll Down -->
  <a
    href="#Corners"
    class="absolute bottom-0 flex w-full flex-col items-center justify-center p-4 transition-all duration-200 hover:scale-110 hover:text-yu-orange-dark"
  >
    <span class="text-2xl font-bold md:text-3xl">Scroll Down</span>
    <span>
      <Icon name="ic:round-keyboard-arrow-down" class="h-8" />
    </span>
  </a>
</section>

<style>
  h1 span,
  h2 span {
    @apply text-yu-orange-dark;
  }

  a img {
    @apply h-16 transition-all duration-200 hover:scale-125 md:h-20;
  }
</style>
